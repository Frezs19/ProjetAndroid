<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ExerciceMathematiquesActivity"
    android:background="@color/light">

    <TextView
        android:id="@+id/exoMaths_compteurOperation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textSize="30sp"
        android:text=""
        android:layout_alignParentTop="true"
        android:layout_margin="10sp"
        android:layout_centerHorizontal="true"/>

    <LinearLayout
        android:id="@+id/linear"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/exoMaths_compteurOperation"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20sp"/>

    <Button
        android:layout_marginTop="30sp"
        android:layout_width="200sp"
        android:id="@+id/exoMaths_operation_suivant"
        android:layout_height="wrap_content"
        android:hint="Suivant"
        android:onClick="onResult"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/linear"
        android:textColor="@color/black"
        android:backgroundTint="@color/orange"/>

    <Button
        android:layout_width="200sp"
        android:id="@+id/exoMaths_operation_precedent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp"
        android:hint="PrÃ©cedent"
        android:onClick="onPrec"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/exoMaths_operation_suivant"
        android:textColor="@color/blacky"
        android:backgroundTint="@color/orange"/>

</RelativeLayout>