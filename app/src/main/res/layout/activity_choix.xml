<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChoixActivity">

    <TextView
        android:id="@+id/choix_TextMain"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:gravity="center"
        android:text="@string/choix_titre" />

    <TextView
        android:id="@+id/choix_TextUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choix_TextMain"
        android:gravity="center"
        android:textSize="28sp"
        android:text="@string/choix_user"/>

    <Button
        android:id="@+id/choix_boutonCalcul"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choix_TextUser"
        android:text="Calculs"
        android:onClick="onCalcul" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/choix_boutonCalcul"
        android:text="Question de culture général"
        android:onClick="onQuestion"/>

</RelativeLayout>